{
	"servers": {
		"microsoft/markitdown": {
			"type": "stdio",
			"command": "uvx",
			"args": [
				"markitdown-mcp==0.0.1a4"
			],
			"gallery": "https://api.mcp.github.com",
			"version": "1.0.0"
		},
		"@modelcontextprotocol/server-filesystem": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"/workspaces/CoPA-Analytics"
			]
		},
		"@modelcontextprotocol/server-github": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-github"
			],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "${input:githubToken}"
			}
		},
		"@modelcontextprotocol/server-git": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-git",
				"--repository",
				"/workspaces/CoPA-Analytics"
			]
		},
		"mcp-server-azure": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@azure/mcp-server-azure"
			]
		}
	},
	"inputs": [
		{
			"id": "githubToken",
			"type": "promptString",
			"description": "GitHub Personal Access Token for GitHub MCP Server",
			"password": true
		}
	]
}